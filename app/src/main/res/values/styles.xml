<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="btn1Theme" parent="android:Theme">
        <item name="android:radioButtonStyle">@style/RadioButton1</item>
    </style>
    <style name="RadioButton1" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio</item>
    </style>


    <style name="btn2Theme" parent="android:Theme">
        <item name="android:radioButtonStyle">@style/RadioButton2</item>
    </style>
    <style name="RadioButton2" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio2</item>
    </style>
</resources>
